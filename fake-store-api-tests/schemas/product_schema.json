{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["id", "title", "price", "category", "description", "image"],
  "properties": {
    "id": {
      "type": "integer"
    },
    "title": {
      "type": "string"
    },
    "price": {
      "type": "number"
    },
    "category": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "image": {
      "type": "string"
    },
    "rating": {
      "type": "object",
      "properties": {
        "rate": {
          "type": "number"
        },
        "count": {
          "type": "integer"
        }
      }
    }
  }
}
